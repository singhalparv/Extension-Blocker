{
    "name": "Dev extension",
    "description": "Gives a demo",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "myStyles.css"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "web_accessible_resources": [
        "images/*.jpg",
        "images/*.jpeg"
    ],
    "permissions": [
        "tabs"
    ]
}